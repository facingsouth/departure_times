<div class="panel row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel-heading text-center">
      <h1>Get Departure Times</h1>
    </div>

    <div class="panel-body">
      <%= render partial: "search_form", locals: { search: Search.new } %>
    </div>
  </div>

  <div class="col-sm-10 col-sm-offset-1">
    <div class="panel-body">
      <%= render partial: "search_result_table", locals: { search: @search, result: @result } %>
    </div>
  </div>

  <div class="col-sm-6 col-sm-offset-3">
    <div class="panel-body" dataType="google-map">
      <%= render partial: "google_map", locals: { map_url: @map_url } %>
    </div>
  </div>
</div>